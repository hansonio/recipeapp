@page
@model Hanson.RecipeApp.Pages.Recipes.DeleteModel

@{
    ViewData["Title"] = "Delete Recipe?";
}

<h2>@ViewData["Title"]</h2>
<hr/>

<div class="row delete-warning">
    <div class="col-md-12">
        <form method="post">
            <div class="alert alert-warning">
                Are you sure you want to delete recipe <strong>@Model.Recipe.Name</strong>?
            </div>
            <div class="form-group form-actions">
                 <a asp-page="./Edit" asp-route-id="@Model.Recipe.Id" class="btn btn-link btn-default">No, Cancel</a>
                <div>
                    <button type="submit" class="btn btn-danger btn-raised">Yes, Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .delete-warning{
            max-width:500px;
            margin: 0 auto;
        }
    </style>
}