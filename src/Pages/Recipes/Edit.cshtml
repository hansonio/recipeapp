@page
@model Hanson.RecipeApp.Pages.Recipes.EditModel

@{
    ViewData["Title"] = "Edit Recipe";
}

<h2>@ViewData["Title"]</h2>
<hr/>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           <div class="form-group">
                <input asp-for="Details" id="Details" name="Details" type="hidden" class="form-control" />
                <trix-editor class="recipe-editor" input="Details" placeholder="compose an epic recipe..."></trix-editor>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group form-actions">
                <a asp-page="./Delete" asp-route-id="@Model.Recipe.Id" class="btn btn-danger">Delete</a>
                <div>
                    <a asp-page="Index" class="btn btn-link btn-default">Cancel</a> 
                    <button type="submit" class="btn btn-primary btn-raised">Update</button>
                </div>
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}